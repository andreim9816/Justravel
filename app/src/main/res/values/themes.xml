<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustTravel" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_logo</item>
        <item name="colorPrimaryVariant">#003d84</item>
        <item name="colorOnPrimary">#5994e7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#003554</item>
        <item name="colorSecondaryVariant">#395e81</item>
        <item name="colorOnSecondary">#000e2b</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:windowBackground">#003d84</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="button_primary">
        <item name="android:width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="backgroundTint">@color/white_logo</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_textView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white_logo</item>
    </style>

    <style name="Theme.JustTravel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">15%</item>
        <item name="cornerSizeBottomRight">15%</item>
    </style>

    <style name="Theme.JustTravel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JustTravel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>